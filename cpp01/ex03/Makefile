CPP = g++
CPPFLAGS = -Wall -Werror -Wextra -std=c++98

HDR = Zombie.hpp HumanA.hpp HumanA.hpp Weapon.hpp
SRCS = main.cpp HumanA.cpp HumanB.cpp Weapon.cpp 
OBJS = $(SRCS:.cpp=.o) 
TARGET = violence

all: $(TARGET)

$(TARGET): $(OBJS) $(HDR)
	$(CPP) $(CPPFLAGS) $(OBJS) -o $(TARGET)

%.o: %.cpp
	$(CPP) $(CPPFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(TARGET)

re: fclean all

